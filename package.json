{
    "name": "Dwarium",
    "version": "1.0.4",
    "description": "",
    "main": "out/main.js",
    "scripts": {
        "compile": "tsc",
        "start": "yarn run compile && electron .",
        "all": "yarn run prod && electron-builder -mwl --arm64 --x64",
        "mac": "yarn run prod && electron-builder -m --arm64 --x64",
        "win": "yarn run prod && electron-builder -w",
        "linux": "yarn run prod && electron-builder -l",
        "publish": "yarn run prod && electron-builder -mw --arm64 --x64 --publish always",
        "dev": "concurrently \"tsc -w\" \"electron .\"",
        "clean": "rm -rf ./out rm -rf ./dist",
        "prod": "yarn run clean && yarn run compile"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^7.0.0",
        "electron": "^16.0.6",
        "electron-builder": "^22.14.5",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "@electron/remote": "^2.0.1",
        "electron-reload": "^2.0.0-alpha.1",
        "electron-updater": "^4.6.1",
        "v8-compile-cache": "^2.3.0"
    },
    "build": {
        "appId": "com.dwarium.ru",
        "productName": "Dwarium",
        "copyright": "Copyright 2022 ©. Деды воевали!",
        "mac": {
            "category": "public.app-category.games",
            "icon": "src/build/icon.icns",
            "identity": "Developer ID Application"
        },
        "win": {
            "icon": "src/build/icon.png"
        },
        "linux": {
            "icon": "src/build/icon.png"
        }
    }
}
